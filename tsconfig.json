{
    "compilerOptions": {
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [ "node_modules/@types" ],
        "outDir": "./dist",
        "experimentalDecorators": true,
        "target": "es5",
        "emitDecoratorMetadata": true,
        "lib": [ "es2015", "dom" ],
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
          "@ilium/effects/*":  ["shared/client/effects/*"],
          "@ilium/stores/*":   ["shared/client/stores/*"],
          "@ilium/models/*":   ["shared/models/*"],
          "@ilium/mocks/*":    ["shared/test/*"],
          "@ilium/services/*": ["shared/services/*"],
          "@ilium/shared/*":   ["shared/*"],
          "@ilium/env/*": ["web/*"]
        }
    },
    "include": [
        "web/app/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}